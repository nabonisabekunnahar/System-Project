<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Background color -->
    <solid android:color="#F8F9FA" /> <!-- Light background color -->

    <!-- Optional border -->
    <stroke
        android:width="2dp"
        android:color="#D6D6D6" /> <!-- Light gray border -->

    <!-- Padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
