<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.UserSignUp">

    <!-- Background Image -->
    <ImageView
        android:id="@+id/background_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/durbarbangla"
        android:scaleType="centerCrop"
        android:contentDescription="Background Image" />

    <!-- Semi-Transparent Overlay -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000" />

    <!-- Scrollable Form -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="#B3FFFFFF"> <!-- White with 70% transparency -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Sign Up Title -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hey There! Sign Up"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_marginBottom="20dp"
                    android:textColor="#658066" />

                <!-- Name -->
                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/white_border"
                    android:padding="12dp"
                    android:hint="Name"
                    android:textColorHint="#A0A0A0"
                    android:textColor="#658066" />

                <!-- Email -->
                <EditText
                    android:id="@+id/user_email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/white_border"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:hint="Email"
                    android:textColorHint="#A0A0A0"
                    android:textColor="#658066" />

                <!-- Faculty Dropdown -->
                <Spinner
                    android:id="@+id/user_faculty"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/white_border"
                    android:padding="8dp"
                    android:spinnerMode="dropdown" />

                <!-- Department Dropdown -->
                <Spinner
                    android:id="@+id/user_department"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/white_border"
                    android:padding="8dp"
                    android:spinnerMode="dropdown" />

                <!-- Year Dropdown -->
                <Spinner
                    android:id="@+id/user_year"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/white_border"
                    android:padding="8dp"
                    android:spinnerMode="dropdown" />

                <!-- Roll Number -->
                <EditText
                    android:id="@+id/user_roll"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/white_border"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:hint="Roll Number"
                    android:textColorHint="#A0A0A0"
                    android:textColor="#658066" />

                <!-- Password -->
                <EditText
                    android:id="@+id/user_password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/white_border"
                    android:layout_marginTop="12dp"
                    android:padding="12dp"
                    android:hint="Password"
                    android:inputType="textPassword"
                    android:textColorHint="#A0A0A0"
                    android:textColor="#658066" />

                <!-- Sign Up Button -->
                <Button
                    android:id="@+id/user_signup_button"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Sign Up"
                    android:textSize="18sp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="#658066"
                    android:textColor="#FFFF" />

                <!-- Redirect to Login -->
                <TextView
                    android:id="@+id/user_login_redirect"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Already signed up? Login"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:textColor="#658066"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </ScrollView>
</RelativeLayout>
